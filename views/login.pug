extends layout

block content
    .uk-container
        form.uk-margin-large-top.uk-animation-scale-down.uk-form-width-large.uk-margin-auto(method="post" action="/users/login")
            fieldset.uk-fieldset
                legend.uk-legend.uk-text-center Login
                .uk-margin
                    input.uk-input(type="text" name="login" placeholder="Login")
                .uk-margin
                    input.uk-input(type="password" name="password" placeholder="Password")
                .uk-margin
                    button.uk-button.uk-button-primary(type="submit" ) Login
                if good
                    .uk-alert-success(uk-alert)
                        a.uk-alert-close(uk-close)
                        p= good
                if messages.error
                    .uk-alert-danger(uk-alert)
                        a.uk-alert-close(uk-close)
                        p= messages.error
                if err
                    .uk-alert-danger(uk-alert)
                        a.uk-alert-close(uk-close)
                        p= err